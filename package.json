{
  "name": "playwright-ts-e2e",
  "version": "0.1.0",
  "private": true,
  "description": "Playwright + TypeScript E2E automation portfolio (POM, CI, HTML report via GitHub Pages).",
  "license": "MIT",
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "test": "playwright test",
    "smoke": "playwright test --grep @smoke",
    "regression": "playwright test --grep @regression",
    "report": "playwright show-report",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.3.2",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.7.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  }
}
